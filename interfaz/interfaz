def buscarActualizaciones():
    etiqueta_resultado.config(text=f"Buscarndo actualizaciones...")

# Crear la ventana principal
root = tk.Tk()
root.title("Obtencion de datos El Encino")
root.geometry("300x400")

# Crear una etiqueta
# frame_izquierda = tk.Frame(root, bg="lightgrey", padx=10, pady=10)
# frame_izquierda.pack(side="left", padx=20, pady=20,)

